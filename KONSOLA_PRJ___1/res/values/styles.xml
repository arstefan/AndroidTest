<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
     <style name="AppBaseTheme" parent="android:Theme.Light">
        
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
       
    </style>


	<style name="MyMoviesTheme" parent="@android:style/Theme.Black">
	    <item name="android:listViewStyle">@style/MyMoviesListView</item>
	    <item name="android:textAppearance">@style/MyTextApperance</item>
	    <item name="android:textColorLink">?android:attr/textColorPrimary</item>
	</style>
	
	<style name="MyTextApperance">
	    <item name="android:textColor">#FFF</item>
	    <item name="android:textStyle">bold</item>
	</style>

	<style name="MyMoviesListView" parent="@android:style/Widget.ListView" >
	
	    <item name="android:listSelector">@drawable/list_selector</item>
	    <item name="android:fastScrollEnabled">true</item>
	    <item name="android:scrollbarSize">20dp</item>
	    <item name="android:footerDividersEnabled">false</item>
	    <item name="android:cacheColorHint">#0000</item>
	    <item name="android:textColor">#0000</item>
	</style>
	
	
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="MyCustomButtonView"  parent="@android:style/Widget.Button">
        <item name="android:textSize">10sp</item>
    </style>
    
     <style name="MyCustomSpinnerItemView"  parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textSize">10sp</item>
    </style>

</resources>
