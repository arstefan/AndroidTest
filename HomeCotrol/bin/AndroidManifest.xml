            android:name="com.zinga.homecontrol.HomeControlActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zinga.homecontrol.LightControlActivity"
            android:label="@string/title_activity_light_control" >
        </activity>
        <activity
            android:name="com.zinga.homecontrol.SpacesList"
            android:label="@string/title_activity_spaces_list" >
        </activity>
        <activity
            android:name="com.zinga.homecontrol.SpaceList"
            android:label="@string/title_activity_space_list" >
        </activity>
    </application>

</manifest>
